@page "/salas/1-3"
@rendermode InteractiveServer
@inject AgendamentoService AgendamentoService

<MudText Typo="Typo.h4" Class="mb-4">Salas 1 a 3</MudText>

@if (salasFiltradas == null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <GradeSalas Salas="salasFiltradas" />
}

@code {
    private List<Sala>? salasFiltradas;

    protected override async Task OnInitializedAsync()
    {
        var todas = await AgendamentoService.ObterSalasEAgendamentosAsync();
        // Filtra as 3 primeiras salas (assumindo ordenação por nome)
        salasFiltradas = todas.OrderBy(s => s.Nome).Take(3).ToList();
    }
}